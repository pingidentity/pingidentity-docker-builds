#
# Ping Identity DevOps - PingFederate Product Staging Dockerfile
#
# This Dockerfile retrieves product specific bits and places them in opt/server
# All ARG inputs are defined in the `docker image build` call from build_product.sh
#

# Image registry to pull pingdownloader from
ARG FOUNDATION_REGISTRY

# Unique identifier used in docker tag to pull correct pingdownloader image
ARG GIT_TAG

# The OS architecture of pingdownloader
ARG ARCH

FROM ${FOUNDATION_REGISTRY}/pingdownloader:1.0-alpine-alnoj-${GIT_TAG}-${ARCH} as staging

# Which product bits to retrieve
ARG PRODUCT

# Which product version to retrieve
ARG VERSION

# Devops user to authenticate with pingdownloader
ARG DEVOPS_USER

# Devops key to authenticate with pingdownloader
ARG DEVOPS_KEY

# If set to `--snapshot`, retrieve latest snapshot build of the specified product instead
ARG PING_IDENTITY_SNAPSHOT

# URL location to retrieve snapshot product bits from
ARG SNAPSHOT_URL

# All executed commands are printed to the console
ARG VERBOSE

# pingfederate-log4j2-update dependency variables
ARG DEPENDENCY_0_PRODUCT
ARG DEPENDENCY_0_VERSION

# MODE could be standalone, engine, upgrade
# the idea is to produce images with just-enough for their intended use
# to improve bootstrap time and reduce pressure on backhaul 
ARG MODE=standalone

COPY tmp /tmp

# Adding the line below to the unzip command avoids extracting the upgrade utility
#        -x pingfederate-*/pingfederate/upgrade/* \

# copy your product zip file into the staging image
RUN /get-bits.sh --product ${PRODUCT} \
        --version ${VERSION} \
        --devops-user ${DEVOPS_USER} \
        --devops-key ${DEVOPS_KEY} \
        --devops-app "pipeline-build-${PRODUCT}-${VERSION}" \
        ${PING_IDENTITY_SNAPSHOT} \
        ${SNAPSHOT_URL:+--snapshot-url ${SNAPSHOT_URL}} \
        --verify-gpg-signature \
	&& unzip -q /tmp/product.zip -d /tmp/ \
        -x */pingfederate-service-installer.jar \
        -x pingfederate-*/pingfederate/sdk/* \
        -x *.bat \
        -x *.dll \
        -x *.exe \
  && rm /tmp/product.zip \
  && mv /tmp/${PRODUCT}-*/${PRODUCT} /opt/server \
  && rm -rf /tmp/pingfederate-* \
  && mkdir -p /opt/out/instance/server/default/data \
  && ( \
      test -n "${DEPENDENCY_0_PRODUCT}" \
      && test -n "${DEPENDENCY_0_VERSION}" \
      && /get-bits.sh --product ${DEPENDENCY_0_PRODUCT} \
          --version ${DEPENDENCY_0_VERSION} \
          --devops-user ${DEVOPS_USER} \
          --devops-key ${DEVOPS_KEY} \
          --devops-app "pipeline-build-${PRODUCT}-${VERSION}" \
          --verify-gpg-signature \
      && rm /opt/server/server/default/lib/log4j-jcl.jar \
      /opt/server/server/default/lib/log4j-*-api.jar \
      /opt/server/server/default/lib/log4j-slf4j-impl.jar \
      /opt/server/server/default/lib/log4j-core.jar \
      /opt/server/server/default/lib/log4j-api.jar \
      /opt/server/server/default/lib/log4j-jul.jar \
      /opt/server/server/default/lib/disruptor.jar \
      /opt/server/upgrade/lib/log4j-core.jar \
      /opt/server/upgrade/lib/log4j-api.jar \
      /opt/server/upgrade/lib/log4j-slf4j-impl.jar \
      && unzip -q /tmp/product.zip -d /tmp/ \
          -x README.txt \
      && cp /tmp/dist/pingfederate/server/default/lib/log4j-core*.jar /opt/server/upgrade/lib/ \
      && cp /tmp/dist/pingfederate/server/default/lib/log4j-api*.jar /opt/server/upgrade/lib/ \
      && cp /tmp/dist/pingfederate/server/default/lib/log4j-slf4j-impl*.jar /opt/server/upgrade/lib/ \
      && mv /tmp/dist/pingfederate/server/default/lib/* /opt/server/server/default/lib \
      || : \
      )

FROM scratch
# Get the product staged above into one layer
COPY --from=staging ["opt/","/opt/"]
